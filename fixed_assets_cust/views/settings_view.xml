<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
      <record id="settings_config" model="ir.ui.view">
            <field name="name">settings.assets.date.config</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='account']" position="inside">
                    <h2>Acc Date Configuration</h2>
                    <div class="row mt16 o_settings_container">
                     <div class="col-12 col-lg-6 o_setting_box" title="These taxes are set in any new product created.">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                        <div class="content-group">
                        <div class="row mt16">
                            <label string="Assets Date" for="assets_date" class="col-lg-3 o_light_label"/>
                            <field name="assets_date"/>
                        </div>
                        </div>
                        </div>
                     </div>
                    </div>
                </xpath>
            </field>
        </record>
</data>
</odoo>
